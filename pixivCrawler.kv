BoxLayout:

	orientation:'horizontal'



	BoxLayout:
		orientation:'vertical'
		padding:15

		Image:
			id:newImage
			source:"logo.png"
			allow_stretch:True
	
		BoxLayout:
			size_hint_y: None
			padding:10
			orientation:'horizontal'
			height: 50

			Label:		
				size_hint_x: None
				width: 50
				text:"From"
			TextInput:		
				id:from_year
				text:"YYYY"
				multiline:False
			TextInput:		
				id:from_month
				text:"MM"
				multiline:False
			TextInput:		
				id:from_day
				text:"DD"
				multiline:False


			Label:		
				size_hint_x: None
				width: 50
				text:"To"
			TextInput:		
				id:to_year
				text:"YYYY"
				multiline:False
			TextInput:		
				id:to_month
				text:"MM"
				multiline:False
			TextInput:		
				id:to_day
				text:"DD"
				multiline:False

		BoxLayout:
			size_hint_y: None
			orientation:'horizontal'
			padding:10
			height: 50

			Label:		
				size_hint_x: None
				width: 50
				text:"Path"
			TextInput:		
				id:dir
				height: 50
				text:"PixivCrawler/"
				multiline:False

		Button:
			id:startButton
			size_hint_y: None
			height: 50
			text:"Start"
			on_press: app.startCrawling()



	BoxLayout:
		size_hint_x: None
		width: 300
		padding:15
		orientation:'vertical'

		TextInput:
			id:console



